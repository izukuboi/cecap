<%= link_to 'Index', programs_path %><br>
<td><%= link_to 'Inicio', root_path %></td><br>

<p>
  <strong>Nombre Programa:</strong>
  <%= @program.nombrePrograma %>
</p>
 
<p>
  <strong># Cursos:</strong>
  
  <%= Course.where(program_id: @program.id).count %>
  <% if tutor_user || subscribed || admin %>
  <%= link_to 'Cursos', program_courses_path(@program) %>
  <% end %>
</p>

<p>
  <strong>Descripcion:</strong>
  <%= @program.description %>
</p>

<p>
  <strong>Precio:</strong>
  <%= @program.amount %>
</p>


<% if tutor_user ||admin%>

<strong> Alumnos Inscritos </strong>

<table class = "table table-bordered table-striped">
  
<thead>
      <tr>
         <th></th>
         
         <th>Nombre</th>

         <th>Apellido Paterno</th>
         
         <th>Apellido Materno</th>
        <th> </th>
      </tr>
   </thead>
   
<tbody>

<% @program.students.each_with_index do |student,index| %>
   <tr>
            <td><%= index+1 %></td>
            <td><%= student.user.nombre %></td>
            <td><%= student.user.apellidop %></td>
            <td><%= student.user.apellidom %></td>
            
         </tr>
  <% end %>
  </tbody>
    
</table>

<% end%>




<% if student_user && !subscribed %>

<%= link_to 'Subscribirse', program_subscribe_path(@program) %><br>
 
<% end%>



