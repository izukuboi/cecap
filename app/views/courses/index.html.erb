<h1>Courses#index</h1>



<% if admin%>
<%= link_to "New Course", new_program_course_path, class: "btn btn-primary" %>
<% end %>


<table class = "table table-bordered table-striped">
   <thead>
      <tr>
         <th>Name</th>

         <th>Description</th>
         
         <th>Tutor</th>
         
         <th>Acceso</th>S

         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @program.courses.each do |resume| %>
         
         <tr>
            <td><%= resume.name %></td>
            <td><%= resume.descripton %></td>
            <td><%= resume.tutor.user.nombre%></td>
            <td><%= link_to "Curso", resume, class: "btn btn-primary" %></td>
            <% if tutor_user || admin %>
            <td><%= button_to "Delete",  resume, method: :delete, class: "btn btn-danger" %></td>
            <% end %>
           
         </tr>
         
      <% end %>
       <td><%= link_to "programa", program_path(@program) , class: "btn btn-primary" %></td>
   </tbody>
   
</table>
